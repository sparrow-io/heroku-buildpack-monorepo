#!/usr/bin/env bash
# bin/export
# This script is sourced by Heroku after our buildpack runs
# It exports environment variables for subsequent buildpacks (heroku/ruby)

# Read PROJECT_PATH from env dir if available
if [ -f "$ENV_DIR/PROJECT_PATH" ]; then
    PROJECT_PATH=$(cat "$ENV_DIR/PROJECT_PATH")
else
    PROJECT_PATH="apps/api"
fi

# Export BUNDLE_GEMFILE pointing to the actual Gemfile location
# This ensures Bundler resolves relative gem paths from apps/api/, not from root
export BUNDLE_GEMFILE="$BUILD_DIR/$PROJECT_PATH/Gemfile"
